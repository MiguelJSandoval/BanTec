<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:fromDegrees="-90"
    android:pivotX="50%"
    android:pivotY="50%"
    android:toDegrees="270">
    <shape
        android:shape="ring"
        android:useLevel="false">
        <gradient
            android:centerColor="#2FFFFFFF"
            android:centerY="0.5"
            android:endColor="#FFFFFF"
            android:startColor="#04FFFFFF"
            android:type="sweep"
            android:useLevel="false" />

    </shape>

</rotate>