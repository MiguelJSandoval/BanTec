<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.devmjs.bantec">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.devmjs.bantec.PantallaInicioCarga"
            android:configChanges="orientation|screenSize"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"
            tools:ignore="LockedOrientationActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.devmjs.bantec.RegistroNuevoUsuario"
            android:configChanges="orientation|screenSize"/>
        <activity
            android:name="com.devmjs.bantec.UsuActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_usu"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.devmjs.bantec.AdminActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_admin"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.devmjs.bantec.MainActivity"
            android:configChanges="orientation|screenSize">
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>